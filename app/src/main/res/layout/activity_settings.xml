<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".screens.SettingsActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/green_background_gradient"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/change_daily_goal"
            android:textSize="50sp"
            android:gravity="center"
            android:textStyle="bold"
            android:padding="@dimen/_20sdp"
            android:textColor="@android:color/white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:layout_marginTop="100dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">

            <ImageButton
                android:id="@+id/buttonDecrease"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:src="@drawable/arrow_active"
                android:rotation="-180"
                android:scaleType="fitCenter"
                android:layout_gravity="center_vertical"
                android:background="@color/fui_transparent"/>

            <TextView
                android:id="@+id/stepsCountText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="5000"
                android:textSize="50sp"
                android:gravity="center_horizontal"
                android:textColor="@android:color/white"
                android:textStyle="bold|italic"/>

            <ImageButton
                android:id="@+id/buttonIncrease"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:src="@drawable/arrow_active"
                android:scaleType="fitCenter"
                android:layout_gravity="center_vertical"
                android:background="@color/fui_transparent"/>
        </LinearLayout>

        <Button
            android:id="@+id/buttonSaveDailyGoal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_50sdp"
            android:text="Save"
            android:textColor="@color/black"
            android:padding="@dimen/_10sdp"
            style="@style/ModeSelectionButtonStyle"/>
    </LinearLayout>
</FrameLayout>